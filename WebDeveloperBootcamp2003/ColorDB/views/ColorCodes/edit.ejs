<%- include('../partials/head') %>

<div class="container">


  <form method="POST" action="/ColorCodes/<%= colorCode.id %>?_method=PUT">
    <h2>Create new color</h2>

    <div class="mb-3 row">
      <label for="colorCode" class="col-sm-2 col-form-label">Color Code:</label>
      <div class="col-5">
        <%= colorCode.code %>
      </div>
    </div>
    <div class="mb-3 row">
      <label for="colorName" class="col-sm-2 col-form-label">Color Name:</label>
      <div class="col-sm-5">
        <input name="name" type="text" class="form-control" id="colorName" value="<%= colorCode.name %>">
      </div>
    </div>
    <div class="mb-3 row">
      <label for="status" class="col-sm-2 col-form-label">Status:</label>
      <div class="col-sm-5">
        <select name="status" class="form-select">
          <option value="Development" <%= colorCode.status === 'Development' ? "selected" : "" %>>Development</option>
          <option value="Approved" <%= colorCode.status === 'Approved' ? "selected" : "" %>>Approved</option>
          <option value="Mastered" <%= colorCode.status === 'Mastered' ? "selected" : "" %>>Mastered</option>
        </select>
      </div>
    </div>
    <div class="mb-3 row">
      <label for="creator" class="col-sm-2 col-form-label">Creator:</label>
      <div class="col-sm-5">
        <%= colorCode.creator %>
      </div>
    </div>
    <div class="mb-3 row">
      <label for="updated" class="col-sm-2 col-form-label">Date:</label>
      <div class="col-sm-5">
        <%= colorCode.updated %>
      </div>
    </div>
    <div class="mb-3 row">
      <label for="comment" class="col-sm-2 col-form-label">Comment:</label>
      <div class="col-sm-5">
        <textarea name="comment" id="comment" class="form-control" rows="5"><%= colorCode.comment %></textarea>
      </div>

    </div>
    <div class="d-flex justify-content-end">
      <button class="btn btn-outline-primary">変更</button>
    </div>
  </form>
